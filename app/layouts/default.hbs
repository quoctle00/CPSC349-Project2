<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>E-Note</title>
  <link  href="/assets/images/default_icon.png"  rel="shortcut icon" type="image/x-icon" />
  <link rel="stylesheet" type="text/css" href="/assets/css/_remake.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/main.css">
</head>

<body>

  <nav class="flex items-center justify-between flex-wrap bg-gray-50 p-6">
    <div class="flex items-center flex-shrink-0 text-black mr-6">
      <image src="/assets/images/default_icon.png" class="fill-current h-8 w-8 mr-2" width="54" height="54"/>
      <span class="font-semibold text-xl tracking-tight">E-Note</span>
    </div>

    <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
      <div class="text-sm lg:flex-grow">
        <a href="/index" class="block mt-4 lg:inline-block lg:mt-0 text-black hover:text-red-500 mr-4">
          Home
        </a>
        <a href="/about" class="block mt-4 lg:inline-block lg:mt-0 text-black hover:text-red-500  mr-4">
          About us
        </a>

      </div>


      <div class="text-sm ">
        {{#if currentUser}}

        <a href="#" class="font-bold block mt-4 mr-10 lg:inline-block lg:mt-0 text-black hover:text-red-500">
          {{currentUser.details.username}}
        </a>

        <a href="/user/logout" class="block mt-4 lg:inline-block lg:mt-0 text-black hover:text-red-500">
          Logout
        </a>
        {{else}}
        <a href="/user/login" class="block mt-4 lg:inline-block lg:mt-0 text-black hover:text-red-500">
          Login
        </a>
        {{/if}}

      </div>
    </div>
  </nav>

  {{!-- Show errors --}}
  {{#if flashErrors }}
  {{#each flashErrors }}
  <div>{{ this }}</div>
  {{/each}}
  {{/if}}
  {{!-- Show success messages --}}
  {{#if flashSuccesses }}
  {{#each flashSuccesses }}
  <div>{{ this }}</div>
  {{/each}}
  {{/if}}
  {{> yield }}
  {{#if isPageAuthor}}
  {{!-- Prevent loading the Remake framework if the page isn't editable --}}
  <script src="/assets/js/vendor/Sortable.min.js"></script>
  <script src="/assets/js/vendor/crostini.min.js"></script>
  <script src="/remake/js/remake.min.js"></script>
  <script src="/assets/js/remake-init.js"></script>
  {{/if}}
  <script src="/assets/js/main.js"></script>
</body>

</html>